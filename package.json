{
  "name": "macsolution",
  "version": "1.0.1",
  "description": "Applicazione desktop Electron per MacSolutionRoom",
  "main": "index.js",
  "author": "Tuo Nome o Azienda",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.macsolution.desktop",
    "productName": "Mac Solution Room",
    "copyright": "Â© 2025 Hiram Software",
    "protocols": [
      {
        "name": "MacSolutionRoom",
        "schemes": [
          "myapp"
        ]
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "https://macsolutionroom.net/electron-updates/"
    },
    "files": [
      "**/*",
      "!node_modules/.cache/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
